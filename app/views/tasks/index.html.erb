<h1>List of tasks</h1>
<ul style="list-style: none">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
         <i class="far fa-square"></i>
      <% end %>
      <%= task.title %>
      <%= link_to "Show details", task_path(task) %>
    </li>
  <% end %>
</ul>
<h2><%= @tasks.count %> task(s)</h2>

