<h1>List of tasks</h1>
<ul style="list-style: none">
  <% @tasks.each do |task| %>
    <li>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
         <i class="far fa-square"></i>
      <% end %>
      <%= task.title %>
      <div class="btn btn-outline-primary btn-sm"><%= link_to "Show details", task_path(task) %></div>
      <div class="btn btn-outline-danger btn-sm"><%= link_to "Delete #{task.title}", task_path(task), method: :delete %></div>
    </li>
  <% end %>
</ul>
<h2><%= @tasks.count %> task(s)</h2>
<%= link_to "Add a new task", tasks_new_path %>

